@model IList<Xlns.PartiComodo.UI.Web.ViewModels.ItemPopulateFlyerViewModel>
@section scripts{
    <script src="@Url.Content("~/Scripts/xlnsScripts/viaggio.select.js")" type="text/javascript"></script>
}
<div class="row">
    <div class="span8">
        <h3>
            Popola il tuo Flyer
        </h3>
        @{if (Model.Count > 0)
          { 
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Inserito nel Flyer
                        </th>
                        <th>
                            Titolo
                        </th>
                        <th>
                            Descrizione
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{foreach (var item in Model)
                      {
                        <tr>
                            <td>
                                @Html.CheckBoxFor(C => item.IsInFlyer, new { id = item.Viaggio.Id })
                                <script type="text/javascript">
             $(function () {
                new SelectViaggio(@(item.Flyer.Id),@(item.Viaggio.Id));
             });
                                </script>
                            </td>
                            <td>
                                @Html.DisplayFor(c => item.Viaggio.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(c => item.Viaggio.Descrizione)
                            </td>
                            <td>
                                @Html.ActionLink("Vedi Dettaglio", "Details", "Viaggio", new { id = @item.Viaggio.Id }, new { @class = "btn" })
                            </td>
                        </tr>
                      }
                    }
                </tbody>
            </table>
          }
          else
          { 
            <p>
                Non ci sono viaggi pubblicati, contatta un Amministratore</p>
          }
        }
    </div>
    <div class="span4">
        <h3>
            Cos'è un Flyer?
        </h3>
        <p>
            Un Flyer è un volantino elettronico che ti aiuterà a promuovere le tue inziative.
            Sfoglia la lista dei viaggi, aggregali e crea la tua vetrina digitale.
        </p>
        <p>
            <img src="@Url.Content("~/Content/images/poster_sanremo.jpg")" alt=""></p>
    </div>
</div>
