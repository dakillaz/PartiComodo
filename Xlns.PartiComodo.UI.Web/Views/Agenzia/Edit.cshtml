@model Xlns.PartiComodo.Core.Model.Agenzia
@section head{
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script src="@Url.Content("~/Scripts/xlnsScripts/viaggio.detail.js")" type="text/javascript"></script>
}
@using (Html.BeginForm("Save", "Agenzia", FormMethod.Post))
{ 
    <div class="row">
        <div class="span4">
            <legend>@Model.Nome</legend>
            <p class="text-info">
                Gentile Utente, da questa pagina sarà possibile modificare i dati relativi
                all'Agenzia selezionata.
            </p>
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Password)
            @Html.LabelFor(c => c.Nome)
            @Html.TextBoxFor(model => model.Nome)
            @Html.LabelFor(c => c.RagioneSociale)
            @Html.TextBoxFor(model => model.RagioneSociale)
            @Html.LabelFor(c => c.PIva)
            @Html.TextBoxFor(model => model.PIva)
            @Html.LabelFor(c => c.Email)
            @Html.TextBoxFor(model => model.Email)
            @Html.LabelFor(c => c.Telefono)
            @Html.TextBoxFor(model => model.Telefono)
            @Html.LabelFor(c => c.Fax)
            @Html.TextBoxFor(model => model.Fax)
            @Html.LabelFor(c => c.Facebook)
            @Html.TextBoxFor(model => model.Facebook)
            @Html.LabelFor(c => c.Skype)
            @Html.TextBoxFor(model => model.Skype)
            @Html.LabelFor(c => c.Twitter)
            @Html.TextBoxFor(model => model.Twitter)
            <p>
                <button type="submit" class="btn">
                    Salva</button></p>
        </div>
        <div class="span4">
            <legend>Indirizzo</legend>
            <p class="text-info">
                Gentile Utente, da questa pagina sarà possibile modificare i dati relativi
                all'indirizzo Agenzia selezionata.
            </p>
            @Html.HiddenFor(model => model.Location.Lat)
            @Html.HiddenFor(model => model.Location.Lng)
            @Html.LabelFor(c => c.Location.City)
            @Html.TextBoxFor(model => model.Location.City)
            @Html.LabelFor(c => c.Location.Street)
            @Html.TextBoxFor(model => model.Location.Street)
            @Html.LabelFor(c => c.Location.Number)
            @Html.TextBoxFor(model => model.Location.Number)
            @Html.LabelFor(c => c.Location.CAP)
            @Html.TextBoxFor(model => model.Location.CAP)
            @Html.LabelFor(c => c.Location.Region)
            @Html.TextBoxFor(model => model.Location.Region)
            @Html.LabelFor(c => c.Location.Nation)
            @Html.TextBoxFor(model => model.Location.Nation)
        </div>
        <div class="span4">
            <legend>Indirizzo su GoogleMaps</legend>
            <p class="text-info">
                Gentile Utente, usa le funzionalità di GoogleMaps per modificare l'indirizzo
                dell'Agenzia.
            </p>
            <p>
                <div id="map_canvas" style="width: 300px; height: 300px; margin-top: 20px; border: 1px solid black">
                </div>
            </p>
        </div>
    </div>
}